@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="uf-form-signin">
    <div class="text-center">
        <i class="bi bi-shop img-fluid" style="color: #29d6a4; font-size: 70px;"></i>
        <h1 class="h3" style="color:#29d6a4">Bienvenido!</h1>
        <h7 class="h-75" style="color:#29d6a4">Por favor ingrese sus credenciales</h7>
    </div>
    <form method="post" asp-page="Index" class="mt-4">
        <div class="input-group uf-input-group input-group-lg mb-3">
            <span class="input-group-text fa fa-user"></span>
            <input type="text" asp-for="@Model.username" class="form-control" placeholder="Usuario">
        </div>
        <div class="mb-3 justify-content-between" align="center">
            <span asp-validation-for="@Model.username" class="text-danger"></span>
        </div>
        <div class="input-group uf-input-group input-group-lg mb-3">
            <span class="input-group-text fa fa-lock"></span>
            <input type="password" asp-for="@Model.password" class="form-control" placeholder="Contraseña">
        </div>
        <div class="mb-3 justify-content-between" align="center">
            <span asp-validation-for="@Model.password" class="text-danger"></span>
        </div>
        <div class="mb-3 justify-content-between" align="center">
            @if (Model.msg != null)
            {
                <label class="alert-danger">@Model.msg</label>
            }
        </div>
        <div class="d-flex mb-3 justify-content-between">
            <div class="form-check">
                <input type="checkbox" class="form-check-input uf-form-check-input" id="exampleCheck1">
                <label class="form-check-label" style="color:#29d6a4" for="exampleCheck1">Recuerdame</label>
            </div>
        </div>
        <div class="d-grid mb-4">
            <button type="submit" class="btn uf-btn-primary btn-lg">Ingresar</button>
        </div>
        <div class="mt-4 text-center">
            <span>No tienes una cuenta?</span>
            <a href="/Registro">Registrarse</a>
        </div>
    </form>
</div>

<!-- JavaScript -->
<!-- Separate Popper and Bootstrap JS -->
<script src="./assets/js/popper.min.js"></script>
<script src="./assets/js/bootstrap.min.js"></script>
